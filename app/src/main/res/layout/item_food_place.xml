<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/item_food_place_cv_main_marginStartEnd"
        android:layout_marginEnd="@dimen/item_food_place_cv_main_marginStartEnd"
        android:background="@color/matte_cream"
        app:cardCornerRadius="@dimen/item_food_place_cv_corner_radius"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="@dimen/item_food_place_content_padding">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civ_place_image"
                android:layout_width="@dimen/item_food_place_circular_image_size"
                android:layout_height="@dimen/item_food_place_circular_image_size"
                android:contentDescription="@string/image_content_description"
                android:src="@mipmap/ic_launcher_round"
                app:civ_border_width="@dimen/item_food_place_cv_corner_radius"
                app:civ_border_color="@color/civ_border_color"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/item_food_place_ll_marginStart"
                android:layout_marginEnd="@dimen/item_food_place_ll_marginEnd"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/primary_text_color"
                    android:textSize="@dimen/item_food_place_title_textSize"
                    android:textStyle="bold"
                    tools:text="Name" />

                <TextView
                    android:id="@+id/tv_description"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/primary_text_color"
                    android:textSize="@dimen/item_food_place_title_textSize"
                    tools:text="Description" />

            </LinearLayout>

        </LinearLayout>


    </androidx.cardview.widget.CardView>




</androidx.constraintlayout.widget.ConstraintLayout>